---
import { formatDate } from "../lib/helpers";
import BasicLayout from "./BasicLayout.astro";

type Props = {
  title: string;
  description: string;
  pubDate: Date;
  minutesRead: string;
  url: string;
};

const { title, description, pubDate, minutesRead, url } = Astro.props;
---

<BasicLayout slug={url} page="blog" title={title} description={description}>
  <main class="mx-auto max-w-3xl w-full h-screen p-8 text-neutral-100">
    <a
      href="/blog"
      class="text-white bg-neutral-900 hover:bg-neutral-800 px-4 py-2 border-1 border-solid border-neutral-600 rounded-lg mb-8"
      >Back</a
    >
    <div class="my-10">
      <h1 class="text-5xl font-semibold">{title}</h1>
      <div class="flex justify-between pt-4 text-gray-500 text-sm">
        <p>{formatDate(pubDate)}</p>
        <p>{minutesRead}</p>
      </div>
    </div>
    <article class="prose prose-p:text-red-500 prose-slate prose-invert">
      <slot />
    </article>
  </main>
</BasicLayout>

<style>
  /* Custom Code Block Styling */
  pre {
    background-color: #1e1e1e;
    color: #d4d4d4;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    font-size: 14px;
    font-family: "Fira Code", monospace;
    line-height: 1.5;
    position: relative;
  }

  /* Code Block Header */
  pre::before {
    content: "Code";
    position: absolute;
    top: 8px;
    left: 16px;
    font-size: 12px;
    color: #c792ea;
    font-weight: bold;
  }

  /* Syntax Highlighting */
  code {
    background-color: rgba(135, 131, 120, 0.15);
    color: #e06c75;
    padding: 0.2em 0.4em;
    border-radius: 4px;
    font-size: 14px;
  }

  /* Scrollbar Styling */
  pre::-webkit-scrollbar {
    height: 8px;
  }

  pre::-webkit-scrollbar-thumb {
    background: #4b5263;
    border-radius: 4px;
  }
</style>
