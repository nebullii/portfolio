---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card/index.astro";
import IntroCard from "../components/IntroCard.astro";
import TimeZone from "../components/TimeZoneCard.astro";
import AboutMe from "../components/AboutMe.astro";
import Now from "../components/Now.astro";
import { Icon } from 'astro-icon/components';
---

<script>
  import { stagger, spring, animate } from "motion";
  import { loaderAnimation } from "../lib/constants";
  const cards = document.querySelectorAll(".card");

  const sequence = [
    loaderAnimation,
    [
      cards,
      { y: ["40%", "0%"], opacity: [0, 1] },
      {
        at: "-0.1",
        duration: 0.4,
        delay: stagger(0.3),
        easing: spring({ velocity: 100, stiffness: 50, damping: 10 }),
      },
    ],
  ];

  animate(sequence);
</script>

<Layout
  title="Neha Chaudhari - Software Developer"
  description="I'm a software developer specializing in backend development, cloud computing, and e-commerce solutions. Passionate about building scalable applications and optimizing performance."
>
  <main class="text-white m-auto p-4 grid gap-2 max-w-[1200px] relative w-full py-12">
    <div class="grid grid-cols-3 gap-2">
      {/* First row - Welcome and About */}
      <div class="col-span-2">
        <IntroCard />
      </div>
      <div class="col-span-1 row-span-3">
        <AboutMe />
      </div>

      {/* Small cards row */}
      <div class="col-span-1">
        <TimeZone />
      </div>
      <div class="col-span-1">
        <Card>
          <a href="/travel" class="block h-full group">
            <div class="flex items-center justify-between h-[45px]">
              <h3 class="text-xl font-serif text-neutral-200">City I Belong To</h3>
              <Icon name="ri:arrow-right-up-line" class="h-6 text-neutral-200 group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform ease-in-out duration-100" />
            </div>
          </a>
        </Card>
      </div>

      {/* Now section */}
      <div class="col-span-2">
        <Now />
      </div>

      {/* Footer */}
      <div class="col-span-2">
        <Card>
          <p class="text-xs text-neutral-500">
            © 2025 · Crafted with ♥️ using <a
              href="https://astro.build/"
              target="_blank"
              class="text-red-500">Astro</a
            > by Neha Chaudhari.
          </p>
        </Card>
      </div>
    </div>
  </main>
</Layout>
