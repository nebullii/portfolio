---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card/index.astro";
import { Icon } from 'astro-icon/components';
---

<Layout
  title="Contact - Neha Chaudhari"
  description="Get in touch with me through various social platforms or email."
>
  <main class="text-white m-auto p-4 grid gap-4 max-w-4xl relative w-full py-12">
    <div class="grid gap-4">
      <Card>
        <div class="flex flex-col gap-4">
          <h1 class="text-2xl font-bold text-neutral-100">Contact</h1>
          <p class="text-neutral-300">Feel free to reach out to me through any of these platforms:</p>
          
          <div class="grid gap-4 md:grid-cols-2">
            <a 
              href="https://github.com/nehachaudhari2811" 
              target="_blank"
              class="flex items-center gap-3 p-4 bg-neutral-900 rounded-lg hover:bg-neutral-800 transition-colors"
            >
              <Icon name="ri:github-fill" class="h-6" />
              <div>
                <h2 class="text-lg font-semibold">GitHub</h2>
                <p class="text-sm text-neutral-400">Check out my code and contributions</p>
              </div>
            </a>

            <a 
              href="https://linkedin.com/in/neha-chaudhari-2811" 
              target="_blank"
              class="flex items-center gap-3 p-4 bg-neutral-900 rounded-lg hover:bg-neutral-800 transition-colors"
            >
              <Icon name="ri:linkedin-box-fill" class="h-6" />
              <div>
                <h2 class="text-lg font-semibold">LinkedIn</h2>
                <p class="text-sm text-neutral-400">Connect with me professionally</p>
              </div>
            </a>

            <a 
              href="mailto:nehachaudhari2811@gmail.com"
              class="flex items-center gap-3 p-4 bg-neutral-900 rounded-lg hover:bg-neutral-800 transition-colors"
            >
              <Icon name="ri:mail-fill" class="h-6" />
              <div>
                <h2 class="text-lg font-semibold">Email</h2>
                <p class="text-sm text-neutral-400">Send me a message directly</p>
              </div>
            </a>
          </div>
        </div>
      </Card>
    </div>
  </main>
</Layout> 