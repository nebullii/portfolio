---
interface Props {
  title: string;
  description: string;
  href: string;
  tags: string[];
}

const { title, description, href, tags } = Astro.props;
---

<article class="bg-dark-400 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
  <a href={href} class="block p-6">
    <h2 class="text-xl font-semibold text-white mb-2">{title}</h2>
    <p class="text-gray-300 mb-4">{description}</p>
    <div class="flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="px-2 py-1 bg-dark-300 text-gray-300 text-sm rounded-full">
          {tag}
        </span>
      ))}
    </div>
  </a>
</article> 