}

const skills: Skill[] = [
  {
    name: "JavaScript/TypeScript",
    category: "Languages",
    proficiency: 90,
    description: "Strong expertise in modern JavaScript and TypeScript development"
  },
  {
    name: "Python",
    category: "Languages",
    proficiency: 85,
    description: "Experience with Django, Flask, and data processing"
  },
  {
    name: "Ruby",
    category: "Languages",
    proficiency: 80,
    description: "Proficient in Ruby on Rails and Spree Commerce"
  },
  {
    name: "React",
    category: "Frontend",
    proficiency: 90,
    description: "Expert in React with hooks and context API"
  },
  {
    name: "Astro",
    category: "Frontend",
    proficiency: 85,
    description: "Modern static site generation and optimization"
  },
  {
    name: "Django",
    category: "Backend",
    proficiency: 85,
    description: "Full-stack development with Django REST Framework"
  },
  {
    name: "Ruby on Rails",
    category: "Backend",
    proficiency: 80,
