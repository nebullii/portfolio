---
import { SITE } from "../consts";
---

<header class="bg-neutral-900/50 backdrop-blur-sm border-b border-neutral-800 fixed top-0 left-0 right-0 z-50">
  <nav class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">
    <a href="/" class="text-white font-semibold hover:text-neutral-300 transition-colors">
      {SITE.title}
    </a>
    <div class="flex items-center gap-6">
      <a
        href="/"
        class="text-neutral-400 hover:text-white transition-colors text-sm"
        class:list={[
          "text-neutral-400 hover:text-white transition-colors text-sm",
          Astro.url.pathname === "/" && "text-white font-medium",
        ]}
      >
        Home
      </a>
      <a
        href="/projects"
        class="text-neutral-400 hover:text-white transition-colors text-sm"
        class:list={[
          "text-neutral-400 hover:text-white transition-colors text-sm",
          Astro.url.pathname.startsWith("/projects") && "text-white font-medium",
        ]}
      >
        Projects
      </a>
      <a
        href="/contact"
        class="text-neutral-400 hover:text-white transition-colors text-sm"
        class:list={[
          "text-neutral-400 hover:text-white transition-colors text-sm",
          Astro.url.pathname === "/contact" && "text-white font-medium",
        ]}
      >
        Contact
      </a>
    </div>
  </nav>
</header>

