---
import { getCurrentTimeInUS, formatTimeForUS } from "../lib/helpers";
import Card from "./Card/index.astro";
---

<script>
  import { onCleanup, onMount } from "solid-js";
  import { formatTimeForUS } from "../lib/helpers";

  let interval: ReturnType<typeof setInterval>;

  function updateClock() {
    const timeDisplay = document.getElementById("timeDisplay");
    const now = new Date();

    if (timeDisplay) {
      timeDisplay.textContent = formatTimeForUS(now);
      timeDisplay.setAttribute("datetime", now.toISOString());
    }
  }

  onMount(() => {
    interval = setInterval(updateClock, 1000);
  });

  onCleanup(() => {
    clearInterval(interval);
  });
</script>

<Card>
  <div class="flex items-center justify-center h-[45px]">
    <time
      datetime=""
      id="timeDisplay"
      class="text-2xl font-serif"
    >
      {formatTimeForUS(getCurrentTimeInUS())}
    </time>
  </div>
</Card>
